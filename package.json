{
  "name": "gildedwebshop",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "build:web": "turbo run build --filter=@gildedwebshop/web",
    "dev:web": "turbo run dev --filter=@gildedwebshop/web",
    "turbo": "^2.4.4",
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
